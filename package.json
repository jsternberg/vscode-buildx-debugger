{
    "name": "vscode-buildx-debugger",
    "displayName": "vscode-buildx-debugger",
    "description": "Interactive Debugger for Dockerfile based on Docker Buildx",
    "version": "0.0.1",
    "publisher": "docker",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Debuggers"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ktock/vscode-buildx-debugger.git"
    },
    "bugs": {
        "url": "https://github.com/ktock/vscode-buildx-debugger/issues"
    },
    "activationEvents": [
        "onDebugResolve:dockerfile",
        "onDebugDynamicConfigurations:dockerfile",
        "onCommand:extension.vscode-buildx-debugger.getProgramName"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.2"
    },
    "contributes": {
        "menus": {
            "editor/title/run": [
                {
                    "command": "extension.vscode-buildx-debugger.debugEditorContents",
                    "when": "resourceLangId == dockerfile",
                    "group": "navigation@2"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.vscode-buildx-debugger.debugEditorContents",
                    "when": "resourceLangId == dockerfile"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.vscode-buildx-debugger.debugEditorContents",
                "title": "Debug File",
                "category": "Dockerfile Debug",
                "enablement": "!inDebugMode",
                "icon": "$(debug-alt)"
            }
        ],
        "breakpoints": [
            {
                "language": "dockerfile"
            }
        ],
        "debuggers": [
            {
                "type": "dockerfile",
                "languages": [
                    "dockerfile"
                ],
                "label": "Dockerfile Debug",
                "configurationAttributes": {
                    "launch": {
                        "required": [],
                        "properties": {
                            "dockerfile": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "Dockerfile"
                            },
                            "contextPath": {
                                "type": "string",
                                "description": "Path to the default context",
                                "default": "${workspaceFolder}"
                            },
                            "target": {
                                "type": "string",
                                "description": "Target build stage to build."
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "dockerfile",
                        "request": "launch",
                        "name": "Build Dockerfile",
                        "dockerfile": "Dockerfile",
                        "contextPath": "${workspaceFolder}"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Dockerfile Debug: Launch",
                        "description": "A new configuration for 'debugging' a user selected Dockerfile.",
                        "body": {
                            "type": "dockerfile",
                            "request": "launch",
                            "name": "Build Dockerfile",
                            "dockerfile": "${command:AskForProgramName}",
                            "contextPath": "${workspaceFolder}"
                        }
                    }
                ],
                "variables": {
                    "AskForProgramName": "extension.vscode-buildx-debugger.getProgramName"
                }
            }
        ]
    },
    "dependencies": {
        "@vscode/vsce": "^3.5.0"
    }
}
